    <script>
        function reservationBooking() {
            $.ajax({
                type:'get',
                url:'/save?seatsNo='+$('#seatsNo').val(),
                success: function (data) {
                    console.log(data);
                    var num=1;
                    for (var i = 0; i <= 11; i++ ){
                    //for (var i in data ){
                        var limit=(i==11) ? 3 : 7;
                        for(var j=0;j<7;j++) {
                            //console.log("kkk");
                            //console.log(data[i][j]);
                            //var classname= data[i][j] ? "badge badge-active-seat" : "badge";
                            $('<span>', {"class": "badge"}).html(num).appendTo($('#row' + (i+1)));
                            num++;
                        }
                    }
                }
            });
            return false;
        }
    </script>
